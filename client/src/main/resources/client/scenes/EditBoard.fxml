<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>


<StackPane prefHeight="720.0" prefWidth="1280.0" style="-fx-background-image: url(&quot;client/images/task_pattern.jpg&quot;);" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.EditBoardCtrl">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" />
      <GridPane alignment="CENTER" prefHeight="720.0" prefWidth="1280.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="50.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Pane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: white;" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowSpan="3" GridPane.valignment="CENTER" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="70.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
               <children>
                    <!-- cancel button -->
                    <Button maxHeight="34.0" maxWidth="90.0" minHeight="34.0" minWidth="90.0" mnemonicParsing="false" onAction="#cancel" prefHeight="34.0" prefWidth="90.0" style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;" text="Cancel" />
                    <!-- confirm button -->
                    <Button maxHeight="34.0" maxWidth="90.0" minHeight="34.0" minWidth="90.0" mnemonicParsing="false" onAction="#confirm" prefHeight="34.0" prefWidth="90.0" style="-fx-background-color: #57A773; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 12px;" text="Confirm" />
               </children>
            </HBox>
              <!-- title -->
              <Text strokeType="OUTSIDE" strokeWidth="0.0" style="-fx-font-family: verdana; -fx-font-weight: bold; -fx-font-size: 28;" text="Edit Board" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                  <font>
                      <Font size="21.0" />
                  </font>
              </Text>
              <!-- board name input -->
              <TextField fx:id="boardName" maxHeight="30.0" maxWidth="300.0" prefHeight="30.0" prefWidth="272.0" promptText="Enter board title" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER" />
         </children>
      </GridPane>
   </children>
</StackPane>
