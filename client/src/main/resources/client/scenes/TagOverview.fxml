            </ScrollPane>
            <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Tags">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <ListView fx:id="tags" orientation="HORIZONTAL" prefHeight="65.0" prefWidth="519.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Create new tag">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Label>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="30.0">
                     <children>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Label text="Name" />
                              <TextField fx:id="tagName" alignment="CENTER">
                                 <font>
                                    <Font size="13.0" />
                                 </font>
                              </TextField>
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Label text="Color" />
                              <ColorPicker fx:id="colorPicker" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER">
                           <children>
                              <Button mnemonicParsing="false" onAction="#addTag" style="-fx-background-color: #4285F4; -fx-font-weight: bold; -fx-text-fill: white;" text="Add Tag">
