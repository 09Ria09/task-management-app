<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox fx:id="root" alignment="CENTER" prefHeight="720" prefWidth="1280" spacing="70.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.CreateListCtrl">
   <children>
      <Label fx:id="title" text="Create Task List" VBox.vgrow="ALWAYS">
         <font>
            <Font size="30.0" />
         </font>
      </Label>
      <TextField fx:id="listNameInput" alignment="CENTER" maxWidth="600.0" promptText="Enter List Name" VBox.vgrow="ALWAYS" />
      <HBox alignment="CENTER" spacing="50.0">
         <Button fx:id="confirmButton" layoutX="226.0" layoutY="275.0" mnemonicParsing="false" onAction="#confirm" style="-fx-background-color: #00DD55; -fx-background-radius: 15;" text="Confirm" />
         <Button fx:id="cancelButton" layoutX="324.0" layoutY="275.0" mnemonicParsing="false" onAction="#cancel" style="-fx-background-color: #EE3333; -fx-background-radius: 15;" text="Cancel" />
      </HBox>
   </children>
</VBox>
